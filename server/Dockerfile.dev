FROM node:18-alpine

WORKDIR /app

# Install runtime dependencies for code execution (without Docker CLI)
RUN apk add --no-cache \
    python3 \
    py3-pip \
    openjdk11-jdk \
    g++ \
    make \
    && ln -sf python3 /usr/bin/python

# Install Node.js TypeScript support globally  
RUN npm install -g typescript ts-node

# Copy package files
COPY package*.json ./

# Install Node.js dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Create directory for temporary code files
RUN mkdir -p /app/code && chmod 777 /app/code

# Set environment variables for Java
ENV JAVA_HOME=/usr/lib/jvm/java-11-openjdk
ENV PATH=$PATH:$JAVA_HOME/bin

EXPOSE 5000

# Use node user for security
USER node

CMD ["npm", "start"]